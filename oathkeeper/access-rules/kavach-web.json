[
  {
    "id": "test:web:login",
    "upstream": {
      "preserve_host": true,
      "url": "http://kavach-web:3000"
    },
    "match": {
      "url": "regexp:^http://(localhost|127\\.0\\.0\\.1):4455/\\.factly/kavach/web(/auth/(login|registration|recovery|verification)|/tokens|/error|/manifest\\.json|/config\\.js|/favicon\\.ico|/logo192\\.png|/static/.*|/.*\\.js|/.*\\.css)?$",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },
  {
    "id": "kavach:web:protected",
    "upstream": {
      "preserve_host": true,
      "url": "http://kavach-web:3000"
    },
    "match": {
      "url": "regexp:^http://(localhost|127\\.0\\.0\\.1):4455/\\.factly/kavach/web(/.*)?$",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "cookie_session"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ],
    "errors": [
      {
        "handler": "redirect",
        "config": {
          "to": "http://127.0.0.1:4455/.factly/kavach/web/auth/login",
          "return_to_query_param": "return_to"
        }
      }
    ]
  },
  {
    "id": "common:cors:preflight",
    "upstream": {
      "preserve_host": true,
      "url": "http://kavach-web:3000"
    },
    "match": {
      "url": "regexp:^http://(localhost|127\\.0\\.0\\.1):4455/.*$",
      "methods": [
        "OPTIONS"
      ]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  }
]